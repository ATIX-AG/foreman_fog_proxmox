<% title @vm.name %>
<div class='span12'>
  <table class="table table-bordered table-striped">
    <tr>
      <th colspan="2">Properties</th>
    </tr>

    <%= prop :name %>
    <%= prop :type %>
    <%= prop :node_id %>
    <%= prop :templated? %>
    <%= prop :mac %>
    <%= prop :memory %>
    <% unless @vm.container? %>
      <%= prop :vga %>
    <% end %>
    <%= prop :cpus %>
    <%= prop :uptime %>
    <%= prop :vmid %>
    <%= prop :description %>
    <%= prop :disks %>
  </table>
</div>
